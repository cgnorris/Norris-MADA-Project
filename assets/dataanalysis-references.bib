@ARTICLE{Scallan_Walter2025-gn,
  title    = "Foodborne illness acquired in the United States-major pathogens,
              2019",
  author   = "Scallan Walter, Elaine J and Cui, Zhaohui and Tierney, Reese and
              Griffin, Patricia M and Hoekstra, Robert M and Payne, Daniel C
