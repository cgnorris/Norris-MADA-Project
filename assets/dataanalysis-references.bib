  publisher = "Frontiers Media SA",
  volume    =  10,
  pages     = "1368",
  month     =  jun,
  year      =  2019,
  keywords  = "food safety; foodborne pathogen; nontyphoidal Salmonella;
               serovars; virulence",
  copyright = "https://creativecommons.org/licenses/by/4.0/",
  language  = "en"
}

